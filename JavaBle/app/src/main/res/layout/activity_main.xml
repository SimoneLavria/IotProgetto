<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/StatoBluetooth"
        android:layout_width="375dp"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@+id/UltimoMessaggioRicevuto"
        app:layout_constraintStart_toStartOf="@+id/UltimoMessaggioRicevuto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UltimoMessaggioRicevuto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/ButtonMessaggi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StatoBluetooth" />

    <Button
        android:id="@+id/Bottone"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="32dp"
        android:text="Chiusura Applicazione"
        app:layout_constraintBaseline_toBaselineOf="@+id/ButtonMessaggi"
        app:layout_constraintEnd_toStartOf="@+id/ButtonMessaggi"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonMessaggi"
        android:layout_width="137dp"
        android:layout_height="81dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="49dp"
        android:text="Visualizza Messaggi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Bottone"
        app:layout_constraintTop_toBottomOf="@+id/UltimoMessaggioRicevuto" />

</androidx.constraintlayout.widget.ConstraintLayout>